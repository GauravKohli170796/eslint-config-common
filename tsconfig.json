{
  "compilerOptions": {
    "target": "ES2017",
    "lib": ["ES2015", "DOM"],
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "module": "commonjs",
    "moduleResolution": "node",
    "declaration": false,
    "sourceMap": true,
    "outDir": "./lib",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "skipLibCheck": true
  },
  "include": ["./**/*", ".eslintrc.js"],
  "typeRoots": ["./node_modules/@types", "./types"],
  "exclude": ["node_modules","lib","test"]
}
